taskActionLink()
  padding-left 24px
  height 20px
  padding-top 2px
  margin 0 5px
  font-size actionLinkFontSize
  display inline-block

#found-rules
  clear left
  padding-top 20px
  position relative

  #found-rules-task-name
    h2Small()
    margin 10px 0
    max-width 800px !important /*TODO*/
    .count
      color unimportantTextColor
      margin-left 15px
      font-size baseFontSize
      strong
        font-weight normal
        color interestMeasureColor

    a.rename-task
      margin-left 10px
      width 20px
      height 25px
      position relative
      top 5px
      display inline-block
      background transparent url('../images/sprite/icon-edit.png') center bottom no-repeat
      visibility hidden

    &:hover
      a.rename-task
        visibility visible

  p.error
    color errorColor
    margin 10px 0

  .found-rules-controls
    position relative
    overflow auto
    text-align right
    color unimportantTextColor
    font-size 0.8*baseFontSize
    
    .paginator
      float left

    label
      display inline-block
      padding 0 5px 0 15px
      margin 0

    select
      padding 5px

  ul
    padding-left 0
    li
      margin 0 0 5px 0
      padding 0 0 5px 20px
      list-style none
      cursor default
      position relative
      border-bottom  1px solid backgroundColor

      input.found-rule-checkbox
        position absolute
        left 0
        top 8px

      .rule
        color foundRuleColor
        cursor default
        -moz-user-select text
        -ms-user-select text
        -webkit-user-select text

      .loading
        display none

      .ruleActions
        ruleActions()
        top 5px

        a.bk
          background transparent url('../images/sprite-icons.png') -19px -119px no-repeat

        a.mark
          background transparent url('../images/icon-ok-20.png') left center no-repeat

        a.unmark
          background transparent url('../images/icon-ok-20.png') left center no-repeat
          &:hover
            background transparent url('../images/icon-stop-20.png') left center no-repeat

        a.kbAddPositive
          background transparent url('../images/icon-thumb-up-20.png') left center no-repeat
          &:hover
            background transparent url('../images/icon-thumb-up-20-active.png') left center no-repeat

        a.kbRemovePositive
          background transparent url('../images/icon-thumb-up-20-active.png') left center no-repeat
          &:hover
            background transparent url('../images/icon-thumb-up-20-remove.png') left center no-repeat

        a.kbAddNegative
          background transparent url('../images/icon-thumb-down-20.png') left center no-repeat
          &:hover
            background transparent url('../images/icon-thumb-down-20-active.png') left center no-repeat

        a.kbRemoveNegative
          background transparent url('../images/icon-thumb-down-20-active.png') left center no-repeat
          &:hover
            background transparent url('../images/icon-thumb-down-20-remove.png') left center no-repeat

        a.details
          background transparent url('../images/icon-info-20.png') left center no-repeat

      .ims
        display block
        ruleIMs()

      &.selected
        .rule
          color selectedFoundRuleColor

        .ruleActions
          a.mark
          a.unmark
            visibility visible

      &.KBpositive
        .ruleActions
          a.kbRemovePositive
            visibility visible
      &.KBnegative
        .ruleActions
          a.kbRemoveNegative
            visibility visible

      &.loading
        .ruleActions
          background transparent url('../images/icon-loading-bw-20.gif') left center no-repeat
          >a
            visibility hidden !important

      &:hover
        .ruleActions
          >a
            visibility visible


  #found-rules-multi-controls
    min-height 10px
    position relative
    .all
      iconLink()
      background transparent url('../images/icon-select-all.png') center center no-repeat
    .none
      iconLink()
      background transparent url('../images/icon-select-none.png') center center no-repeat
    .invert
      iconLink()
      background transparent url('../images/icon-select-invert.png') center center no-repeat

    .actions
      margin-left 10px
      >a
        taskActionLink()
        display none
        &.mark
          background transparent url('../images/icon-ok-20.png') left center no-repeat
        &.unmark
          background transparent url('../images/icon-stop-20.png') left center no-repeat
        &.kbAddPositive
          background transparent url('../images/icon-thumb-up-20.png') left center no-repeat
          &:hover
            background transparent url('../images/icon-thumb-up-20-active.png') left center no-repeat
        &.kbAddNegative
          background transparent url('../images/icon-thumb-down-20.png') left center no-repeat
          &:hover
            background transparent url('../images/icon-thumb-down-20-active.png') left center no-repeat
        &.visible
          display inline-block

    .task-actions
      float right
      margin-top 3px
      >a
        taskActionLink()
        &.mark-all
          background transparent url('../images/icon-ok-20.png') left center no-repeat
        &.task-details
          background transparent url('../images/icon-goreport-20.png') left center no-repeat
        &.task-export
          background transparent url('../images/icon-export-20.png') left center no-repeat
        &.disabled
          disabledLink()
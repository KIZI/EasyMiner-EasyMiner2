tabPadding = 15px

#marked-rules-tabs
  margin boxMargin 0 0 boxMargin
  float left
  clear left
  padding 0
  width minContentWidth + 4*boxMargin
  +tablet()
    flexbox(flex)
    flex-direction(row)
    h2
      flex(grow:1)
    width initial
  // +tablet_p()
  //   h2
  //     font-size 29px
  +tablet_p()
    flex-direction(column)
  +mobile()
    flex-direction(column)
  .marked-rules-tab
    box()
    h2AR()
    width (minContentWidth + 4*boxMargin - 0.5*boxMargin) * 0.5
    margin 0
    padding 0
    background-color rgba(255, 255, 255, 0.6)
    +tablet()
      flexbox(flex)
      width initial
      margin-bottom 5px
    +mobile()
      flex-group(1)
    &.marked-rules-tasks
      float left
      +tablet()
        margin-right 5px
      +tablet_p()
        margin-right 0
      +mobile()
        margin-right 0
    &.marked-rules-base
      float right
      +tablet()
        margin-left 5px
      +tablet_p()
        margin-left 0
      +mobile()
        margin-left 0
    &.marked-rules-tab-active
      +tablet()
        margin 0
      +tablet_p()
        flex-group(2)
      +mobile()
        flex-group(2)
      background-color #ffffff
      border-bottom #fff 5px solid
    &:hover
      background-color #ffffff
    a
      padding 20px tabPadding
      cursor pointer
      display block
      color h2ARColor !important
      text-decoration none !important

#marked-rules
  box()
  box-shadow(10px, 0, 10px, 0, boxShadowColor)
  min-width minContentWidth
  margin 0 0 0 boxMargin
  float left
  clear left
  .marked-rule  
    flexbox(flex)
  +tablet()
    min-width initial
    .marked-rules-control-wrapper
      flexbox(flex)
      flex-direction(row)
      flex-justify(start)
      flex(grow:1)
      label 
        font-size 1rem
      select
        border 1px solid black
    .marked-rules-tasks-content
      +tablet()
        .minimize
          flexbox(flex)
          flex-direction(column)
        .marked-rule  
          flexbox(flex)
          flex-justify(space-between)
          .ruleActions
            flexbox(flex)
            flex-justify(end)
  +mobile()
    .marked-rules-control-wrapper
      flex-direction(column)
    .ruleActions
      min-width 100px

  h2
    h2AR()
    /*margin-left 10px*/
    margin 0 0 5px 0


  .minimize a.toggle span
    background transparent url('../images/sprite-icons.png') -20px -220px no-repeat

  .marked-rules-base-content
    display none

  .maximize
    ul,.marked-rules-checkbox-controls,.marked-rules-controls
      display none
    a.toggle span
      background transparent url('../images/sprite-icons.png') -19px -169px no-repeat
  
  .marked-rules-empty
    display none

  .empty .marked-rules-empty
    display block

  .marked-rules-task-name
    h2Small()
    margin 10px 0
    position relative
    padding-left 20px
    text-decoration none

    .count
      color unimportantTextColor
      margin-left 15px
      font-size baseFontSize
      strong
        font-weight normal
        color interestMeasureColor

    a.rename-task
      margin-left 10px
      width 20px
      height 25px
      position relative
      top 5px
      display inline-block
      background transparent url('../images/sprite/icon-edit.png') center bottom no-repeat
      visibility hidden

    a.remove-task
      margin-left 10px
      width 20px
      height 25px
      position relative
      top 5px
      display inline-block
      background transparent url('../images/icon-stop-20.png') center bottom no-repeat
      visibility hidden

    a.toggle span.toggle
        display block; width 12px; height 12px
        position absolute
        left 0
        top 10px

    &:hover
      a.rename-task,
      a.remove-task
        visibility visible
    +tablet()
      a.rename-task,
      a.remove-task
        visibility visible

  .clearfix
    clear both

  p.error
    color errorColor
    margin 10px 0

  .marked-rules-controls
    position relative
    overflow auto
    text-align right
    color unimportantTextColor
    font-size 0.8*baseFontSize
    +tablet()
      flexbox(flex)
      flex-direction(row)
      flex-justify(space-between)
    +mobile()
      flex-direction(column)

    .paginator
      float left
      +tablet()
        flexbox(flex)
        flex-align(center)
      +mobile()
        margin-top 5px

    label
      display inline-block
      padding 0 5px 0 15px
      margin 0
      +tablet()
        flexbox(flex)
        flex-align(center)
      +mobile()
        padding-left 0

    select
      padding 5px

  ul
    padding-left 0
    li
      margin 0 0 5px 0
      padding 0 0 5px 20px
      list-style none
      cursor default
      position relative
      border-bottom  1px solid backgroundColor

      input.marked-rule-checkbox
        position absolute
        left 0
        top 8px
        +tablet()
          width 15px
          height 15px
          top 4px

      .rule
        color foundRuleColor
        cursor default
        -moz-user-select text
        -ms-user-select text
        -webkit-user-select text

      .loading
        display none

      .ruleActions
        ruleActions()
        top 5px

        a.bk
          background transparent url('../images/sprite-icons.png') -19px -119px no-repeat

        a.clear
          background transparent url('../images/icon-stop-20.png') left center no-repeat

        a.details
          background transparent url('../images/icon-info-20.png') left center no-repeat

        a.kb-add[rel=positive]
          background transparent url('../images/icon-thumb-up-20.png') left center no-repeat
          &:hover
            background transparent url('../images/icon-thumb-up-20-active.png') left center no-repeat

        a.kb-add[rel=negative]
          background transparent url('../images/icon-thumb-down-20.png') left center no-repeat
          &:hover
            background transparent url('../images/icon-thumb-down-20-active.png') left center no-repeat

      .ims
        display block
        ruleIMs()

      &.loading
        .ruleActions
          background transparent url('../images/icon-loading-bw-20.gif') left center no-repeat
          >a
            visibility hidden !important

      &:hover
        .ruleActions
          >a
            visibility visible

  .marked-rules-multi-controls
    min-height 25px
    position relative
    padding-bottom 10px
    border-bottom 2px solid linkColor
    .all
      iconLink()
      background transparent url('../images/icon-select-all.png') center center no-repeat
    .none
      iconLink()
      background transparent url('../images/icon-select-none.png') center center no-repeat
    .invert
      iconLink()
      background transparent url('../images/icon-select-invert.png') center center no-repeat

    .marked-rules-checkbox-controls
      float left

    .actions
      margin-left 10px
      >a
        taskActionLink()
        display none
        &.mark
          background transparent url('../images/icon-ok-20.png') left center no-repeat
        &.unmark,&.kb-unmark
          background transparent url('../images/icon-stop-20.png') left center no-repeat
        &.kb-add[rel=positive]
          background transparent url('../images/icon-thumb-up-20.png') left center no-repeat
        &.kb-add[rel=negative]
          background transparent url('../images/icon-thumb-down-20.png') left center no-repeat
        &.visible
          display inline-block

    .task-actions
      float right
      margin-top 3px
      >a
        taskActionLink()
        &.mark-all
          background transparent url('../images/icon-ok-20.png') left center no-repeat
        &.task-details
          background transparent url('../images/icon-goreport-20.png') left center no-repeat
        &.task-export
          background transparent url('../images/icon-export-20.png') left center no-repeat
        &.rules-editor
          background transparent url('../images/sprite/icon-edit.png') left center no-repeat
        &.model-tester
          background transparent url('../images/sprite/icon-bk.png') left center no-repeat
        &.disabled
          disabledLink()
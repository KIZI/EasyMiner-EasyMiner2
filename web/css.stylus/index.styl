*
  userSelect(none)

body
  background: transparent url("../images/bg-body.jpg") center -10px repeat;
  font-family font
  font-size baseFontSize
  overflow-y scroll


#wrapper
  min-height 500px
  min-width minContentWidth2
  width minContentWidth2
  margin 0 auto
  position relative

section#workplace
  margin 0 auto; padding-bottom boxMargin
  float left

section#content
  box()
  min-width minContentWidth
  float left
  margin boxMargin 0 0 boxMargin
  padding-left boxMargin

  h2
    h2AR()
    margin 0

  h3
    color h3ContentColor
    font h3ContentFont
    border-bottom 1px solid h3ContentColor
    line-height 20px
    margin-bottom 10px

a
  color linkColor
  text-decoration none
  &:hover
    text-decoration underline
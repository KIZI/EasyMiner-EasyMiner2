#overlay
  color #434343
  font font
  background none rgba(0, 0, 0, 0.6)
  position fixed
  top 0
  left 0
  visibility hidden
  z-index 1
  width 100%
  min-width 100%

div#overlay-inner
  top 0
  left 0
  width 100%
  height 100%

  form
    line-height 36px
    em
      color h2ARColor
      font-size 14px
      float left
      padding-left 5px
      position relative; top -11px

    em.normal
      font-style normal

    #message
      color errorColor
      line-height 1em

    label
      font-weight bold
      font-size 14px
      text-align right
      line-height 1.3em
      padding-right 5px
      display block; width 140px
      float left; clear left

    select
      padding 4px 2px 1px

    input[type='text'],
    input[type='number'],
    select
      color color
      font-size 14px
      border 1px solid #AAA
      background-color #FFF
      float left
      padding 4px 2px 1px
      position: relative; top: -4px
      margin-bottom 10px
      -moz-user-select text
      -ms-user-select text

    input[type='number']
      -moz-appearance textfield

    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button
      -webkit-appearance none
      margin 0

    input[type='number'].shortnr
      text-align right
      width 75px

    select.alpha,
    input[type='number']
      color #7B0D2E
      font-size 20px
      //border none
      font-weight bold
      width 30px
      float left

    input[type='submit']
      mainButton()
      margin-bottom 5px

    .slider
      background #FFF none
      border 1px solid #A6C9E2
      border-radius(5px)
      width 133px; height 5px
      position relative; top 5px
      float left

      .knob
        background-color #0078AE
        border 1px solid #77D5F7
        color #FFFFFF
        font-weight normal
        outline medium none
        border-radius(5px)
        width 10px; height 10px
        position relative; top -3px
        cursor move

    #add-coefficient-autocomplete table,
    #edit-coefficient-autocomplete table
      line-height 1em
      clear left
      margin-top 1em

    .info
      info()

    .tooltip
      tooltip()

  h2
    h2()

  > div
    overlay()

  > div.bigger
    position: absolute !important
    top:10px !important
    transform: translate(-50%, 0) !important

  > div > a
    overlay-close()

  #new-task-button
    background transparent
    float none
    padding 0
    top 0

  #add-attribute-window,
  #edit-attribute-window,
  #new-task-window,
  #show-histogram-window,
  #create-user-report-window,
  #export-business-rules-window,
  #model-tester-window,
  #show-br-base-window
    width 800px
    /*margin-top 45px*/
    iframe
      border none
      width 800px; height 500px
    form
      input[type="submit"]
        margin-left 310px

  #show-rule-details-window
    width 800px
    padding-bottom 10px
    iframe
      width 800px
      height 380px
      border none


  #add-br-base-window
    width 400px
    margin-top 45px
    iframe
      height 100px
      width 400px
      border none


  #loading-data-window
  #user-warning-window
    text-align center
    background #FFF url('../images/icon-stop-72.png') center 30px no-repeat
    padding 120px 0 20px 0
    p
      margin 10px 0 20px 0
    a
      mainButton()
      invisButton()
      width 100px
      margin-bottom 0

  #loading-data-window
    &.loading
      padding-bottom 40px
      background #FFF url('../images/icon-loading-big.gif') center 30px no-repeat
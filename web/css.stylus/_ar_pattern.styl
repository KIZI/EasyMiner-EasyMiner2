#workplace
  +mobile_p()
    &.hide
      #content
        width 23px
        padding 10px
      .ar-header-wrapper
        h2
          width 23px
          white-space nowrap
          overflow hidden
      #ar-controller,
      #dr-controller,
      #ar-wrapper,
      .clearfix,
      #ar-action-box,
      #found-rules,
      #marked-rules-tabs,
      #marked-rules
        display none
        
section#active-rule
  position relative
  .ar-header-wrapper
    a
      display none
      background: black
  +tablet()
    flexbox(flex)
    flex-direction(column)
    flex(grow:1)
    position initial
    div 
      box-sizing border-box
    #ar-wrapper
      flexbox(flex)
      flex-direction(column)
    .ar-header-wrapper
      flexbox(flex)
      flex-direction(row)
      flex-align(center)
      a
        display flex
        width 20px
        height 20px
        margin-left auto
      #ar-controller
        &.maximize
          background transparent url('../images/sprite-icons.png') -15px -165px no-repeat
        &.minimize
          background transparent url('../images/sprite-icons.png') -16px -216px no-repeat
      &.ar-hidden
        h2
          flexbox(flex)
          flex-justify(center)
          width 100%
        #ar-controller
          display none
    &.ar-hidden
      #ar-action-box,
      #found-rules
        display none

  #ar-wrapper
    &.clearfix
      &.minimize
        display none
  
  #antecedent
    width 325px
    h3
      +tablet()
        flex-justify(space-between)
        flex-align(center)
      a#empty-antecedent
        remove()
        margin-top -2px
        float right
        +tablet()
          flexbox(flex)
          visibility visible
          margin 5px
    .cedent
      cedent()
    >.cedent
      firstCedent()
    &:hover
      a#empty-antecedent
        visibility visible
    +tablet()
      width 100%
      min-width initial

  #interest-measures
    margin-left 2*boxMargin
    width interestMeasuresWidth
    +tablet()
      flexbox(flex)
      margin-left 0
      width initial
      width 100%
      min-width 160px
      h3 
        padding 5px 0
    #add-im
      font-size 14px
      background transparent url('../images/sprite-icons.png') -167px -162px no-repeat
      margin 0 0 0 10px
      padding-left 20px
      float left
      +tablet()
        margin 0
        margin-top 10px
    .im
      interestMeasureMixin()
      float left; clear left
      margin-bottom 7px
      .edit-im
        edit()
        margin-right 5px
        float left
        +tablet()
          width 20px
          margin-right 0 
          margin 5px
      &:hover .edit-im
        visibility visible
      .remove-im
        remove()
        float left
        &.required
          visibility hidden
        +tablet()
          width 20px
          margin-right 0 
          margin 5px
      &:hover .remove-im
        visibility visible
        &.required
          visibility hidden
      +tablet()
        flexbox(flex)
        flex-direction(row)
        width 100%
        margin-bottom 0
        a, span.name 
          flexbox(flex)
          flex-align(center)
          .threshold
            margin-left 5px
        a 
          margin 5px

  #succedent
    margin-left 2*boxMargin
    width 325px
    h3
      +tablet()
        flex-justify(space-between)
        flex-align(center)
      a#empty-succedent
        remove()
        margin-top -2px
        float right
        +tablet()
          flexbox(flex)
          visibility visible
          margin 5px
    .cedent
      cedent()
    >.cedent
      firstCedent()
    &:hover
      a#empty-succedent
        visibility visible
    +tablet()
      width 100%
      min-width initial
      margin-left 0

  #antecedent, #interest-measures, #succedent
    float left
    height 300px
    padding-bottom 70px
    overflow auto
    +tablet()
      flexbox(flex)
      flex-direction(column)
      flex(grow:1, shrink:1)
      height auto
      padding-bottom 0
      h3
        flexbox(flex)
      .cedent
        flexbox(flex)
        padding 0
        .fields
          flexbox(flex)
          flex-direction(column)
          width 100%
          .info
            padding 5px
          .connective
            flexbox(flex)
            flex-justify(start)
            height auto
            margin 0
            margin-left 30px
            width 100
          .field
            flexbox(flex)
            flex-direction(row)
            flex-align(center)
            height initial 
            float initial
            // flex-justify(space-between)
            margin 3px 0
            .controls
              flexbox(flex)
              flex-direction(row-reverse)
              margin-left auto


  .no-restriction
    background transparent url('../images/sprite-icons.png') -20px -714px no-repeat
    padding 1px 0 0 17px 
    margin-top 2px
    float left
    clear left
    cursor help
    +tablet()
      &span:after
        content 'No restriction box will be considered as empty cedent.'

  #ar-action-box
    position relative
    clear both
    overflow auto
    +mobile()
      flexbox(flex)
      flex-direction(column-reverse)
    > div
      padding 20px 0 20px 55px
      &.in_progress
        background boxBackgroundColor url('../images/icon-loading-bw-48.gif') left center no-repeat
      &.question
        background boxBackgroundColor url('../images/icon-help-48.png') left center no-repeat
      &.solved
        background boxBackgroundColor url('../images/icon-ok-48.png') left center no-repeat
      &.interrupted
        background boxBackgroundColor url('../images/icon-stop-48.png') left center no-repeat
      &.failed
        background boxBackgroundColor url('../images/icon-warning-48.png') left center no-repeat
      &.info
        background boxBackgroundColor url('../images/icon-info-48.png') left center no-repeat
    
    &.minimize
      display none

    #stop-mining
      mainButton()
      float right
      margin 5px 0 5px 10px
      border-color #800000
      background #800000
      &:hover
      &:focus
        border-color #800000
        background #d50000

    #start-mining
      mainButton()
      margin 5px 0 5px 10px
      float right

    #start-mining-with-pruning-label
      float right
      clear right
      margin 5px 0 0 0
      padding 0 15px
      width 150px
      text-align center
      +mobile_p()
        width 100%
      label
        padding-left 5px
        cursor pointer
      input[type=checkbox][disabled] + label
        color disabledInputColor
        cursor default